{
    //----------------------------------------------------------------------
    // FONT & DISPLAY
    //----------------------------------------------------------------------
    "editor.fontFamily": "'Caskaydia Cove Nerd Font', 'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    "editor.rulers": [
        170
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    //----------------------------------------------------------------------
    // FORMAT & LINTING
    //----------------------------------------------------------------------
    "editor.formatOnSave": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "emmet.includeLanguages": {
        "rust": "rs"
    },
    "emmet.extensionsPath": [
        ""
    ],
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "files.watcherExclude": {
        "**/target/**": true,
        "**/temp/**": true
    },
    "html.format.maxPreserveNewLines": 1,
    //----------------------------------------------------------------------
    // ENVIRONMENT
    //----------------------------------------------------------------------
    // https://github.com/microsoft/vscode/issues/69665
    "terminal.integrated.experimentalRefreshOnResume": true,
    "disable-hardware-acceleration": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.env.windows": {
        "unuseful_to_maintain": "true"
    },
    "terminal.integrated.allowWorkspaceConfiguration": true, // This setting can be applied only in application user settings
    //----------------------------------------------------------------------
    // DEBUG
    //----------------------------------------------------------------------
    "debug.allowBreakpointsEverywhere": true,
    "rest-client.previewOption": "exchange",
    //----------------------------------------------------------------------
    // GIT
    //----------------------------------------------------------------------
    "git.autofetch": true,
    "git.autofetchPeriod": 60,
    "git.ignoreLimitWarning": true,
    // "git.enableCommitSigning": true,
    //----------------------------------------------------------------------
    // LANGUAGE SPECIFICS
    //----------------------------------------------------------------------
    "[css]": {
        "editor.formatOnSave": false
    },
    "[sql]": {
        "editor.formatOnSave": false
    },
    "[html]": {
        "editor.formatOnSave": false
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.formatOnSave": true
    },
    "[toml]": {
        "editor.formatOnSave": true
    },
    "crates.listPreReleases": true
}
